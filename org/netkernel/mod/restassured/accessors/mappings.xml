<config>

	<endpoint>
		<verbs>DELETE</verbs>
		<id>urn:org:netkernel:mod:restassured:accessors:config:delete</id>
		<grammar>
			<active>
				<identifier>active:RESTAssured/config</identifier>
			</active>
		</grammar>
		<request>
			<identifier>active:groovy</identifier>
			<argument name="operator">res:/org/netkernel/mod/restassured/accessors/ra-reset-static-state.gy</argument>
		</request>
	</endpoint>

	<endpoint>
		<verbs>SINK</verbs>
		<id>urn:org:netkernel:mod:restassured:accessors:config:set</id>
		<grammar>
			<active>
				<identifier>active:RESTAssured/config</identifier>
				<argument name="config"/>
			</active>
		</grammar>
		<request>
			<identifier>active:groovy</identifier>
			<argument name="operator">res:/org/netkernel/mod/restassured/accessors/ra-setup-static-state.gy</argument>
			<argument name="config">arg:config</argument>
		</request>
	</endpoint>

	<endpoint>
		<verbs>SOURCE</verbs>
		<id>urn:org:netkernel:mod:restassured:accessors:config:get</id>
		<grammar>
			<active>
				<identifier>active:RESTAssured/config</identifier>
			</active>
		</grammar>
		<request>
			<identifier>active:groovy</identifier>
			<argument name="operator">res:/org/netkernel/mod/restassured/accessors/ra-report-static-state.gy</argument>
		</request>
	</endpoint>

</config>


